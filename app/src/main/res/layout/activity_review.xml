<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_review"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#f2f2f2"
    tools:context="com.example.kimym.mobileproject.ReviewActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginLeft="15dp"
                android:layout_marginBottom="5dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:textSize="25dp"
                    android:text="하림빌딩"
                    android:id="@+id/text_title"
                    ></TextView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/text_address"
                    android:text="서울특별시 서초구 잠원동 8-24"
                    android:textColor="#000000"
                    android:textSize="12dp"
                    ></TextView>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:paddingTop="5dp">

            <RatingBar
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:id="@+id/ratingbar"
                android:numStars="5"
                android:stepSize="0.5"
                android:isIndicator="true"
                android:rating="3.5"
                style="@style/CustomRatingBar"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:gravity="center"
                android:textSize="15dp"
                android:text="8개의 후기"
                android:textColor="#000000"/>
        </LinearLayout>
    </LinearLayout>

    <fragment
        android:id="@+id/review_map"
        android:layout_width="match_parent"
        android:layout_marginTop="15dp"
        android:layout_height="150dp"
        android:name="com.google.android.gms.maps.MapFragment">
    </fragment>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/review_linear"
        android:background="#17222222"
        android:padding="9dp"
        android:orientation="vertical"
        android:layout_marginTop="9dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="후기를 남겨주세요"
            android:textStyle="bold"
            android:textSize="20dp"
            android:textColor="#000000"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="예시 - 휴지가 없으니까 챙겨가세요! \n \t \t \t \t엄청깨끗해요 여기오세요^^"
            android:textSize="13dp"
            android:gravity="center"
            android:textColor="#000000"/>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:layout_marginTop="5dp"
            android:src="@drawable/substract"
            android:scaleType="fitXY"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="별점"
                android:layout_gravity="center"
                android:textColor="#000000"
                android:textSize="15dp"/>
            <RatingBar
                android:layout_width="wrap_content"
                android:layout_marginLeft="18dp"
                android:layout_height="32dp"
                android:id="@+id/input_ratingbar"
                android:numStars="5"
                android:stepSize="0.5"
                android:rating="0.0"
                style="@style/CustomRatingBar"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="후기 "
                android:layout_gravity="center"
                android:textColor="#000000"
                android:textSize="15dp"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:id="@+id/input_review_text"
                android:hint="여기에 후기를 작성해주세요!"
                android:textColorHint="#55000000"/>
        </LinearLayout>
        <Button
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_margin="5dp"
            android:text="후기 등록"
            android:background="#33222222"
            android:id="@+id/submit_review_button"
            />
    </LinearLayout>

